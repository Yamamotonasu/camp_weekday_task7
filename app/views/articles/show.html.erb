<h2 class="mb-4">Article Detail</h2>
<div class="card">
  <p class="card-header"><%= @article.title %></p>
  <div class="card-body">
    <%= simple_format(@article.body) %>
    <%= link_to "Articles", articles_path, class: "btn btn-dark" %>
    <%= link_to "Edit", edit_article_path, class: "btn btn-dark ml-2" %>
    <%= link_to "Delete", @article, class: "btn btn-dark ml-2", method: :delete, data: { confirm: "削除してよろしいですか？" } %>
  </div>
</div>


