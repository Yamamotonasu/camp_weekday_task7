<div class="mt-3">
  <% @articles.each do |article| %>
    <div class="pb-4">
      <h4><%= link_to article.title, article, class: "text-dark" %></h4>
      <h5 class="text-muted"><%= article.created_at.strftime("%b %d, %Y") %></h5>
      <p><%= truncate(article.body, length: 100) %></p>
      <p><%= link_to "More detail", article, class: "text-dark " %></p>
    </div>
  <% end %>
</div>
<%= link_to "New posts", new_article_path, class: "btn btn-dark" %> 

